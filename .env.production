# Production Environment Configuration
# This file is used for production deployment

# API Configuration
VITE_API_URL=https://api.eirvana.com
VITE_API_TIMEOUT=30000
VITE_API_KEY=prod-api-key-replace-in-build
VITE_API_VERSION=v1

# Application Settings
VITE_APP_NAME=Eirvana
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_AUTH=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Authentication Settings
VITE_AUTH_TOKEN_EXPIRY=86400000
VITE_AUTH_REFRESH_THRESHOLD=300000

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_TOGGLE=true
VITE_SHOW_VERSION_INFO=false

# Development Tools (Disabled in Production)
VITE_ENABLE_REACT_DEVTOOLS=false
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_LOG_LEVEL=error

# External Services (Production)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXX-X
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Health Check
VITE_HEALTH_CHECK_INTERVAL=60000
VITE_HEALTH_CHECK_ENABLED=true